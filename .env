# ================== PRICE THRESHOLDS ==================
# Minimum price for UP token to trigger buy (0.0 - 1.0)
# Example: 0.45 = buy UP if price >= 0.45
UP_THRESHOLD=0.95

# Minimum price for DOWN token to trigger buy (0.0 - 1.0)
# Example: 0.45 = buy DOWN if price >= 0.45
DOWN_THRESHOLD=0.95

# ================== BET CONFIGURATION ==================
# Base bet amount in USD
BET_USD=1.1

# ================== RETRY CONFIGURATION ==================
# Enable retry purchases (YES/NO)
RETRIES_ENABLED=YES

# Number of retries after initial check (each retry is 1 minute apart)
# Example: 3 = check at 1:10, retry at 1:11, 1:12, 1:13
MAX_RETRIES=2

# Multiplier for bet amount on each retry
# Example: 1.5 = increase bet by 50% each retry
# 1.0 = no increase (same bet each time)
# Compounding: retry 1 = BET_USD * 1.5, retry 2 = BET_USD * 1.5 * 1.5 = BET_USD
* 2.25
RETRY_MULTIPLIER=1.5

# ================== MARKETS ==================
# Comma-separated list of markets to trade
MARKETS=BTC,ETH,SOL,XRP

# ================== PATHS ==================
# Base directory for logs and database
BASE_DIR=/home/ubuntu/polyfazi

# ================== NOTIFICATIONS ==================
# Discord webhook URL for notifications (optional)
DISCORD_WEBHOOK=

# ================== API CREDENTIALS ==================
# These are auto-generated if not provided
# API_KEY=
# API_SECRET=
# API_PASSPHRASE=
